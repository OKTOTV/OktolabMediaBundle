{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': '', 'dropdown': ''} %}
{% endblock %}

{% block body_main %}
    <div class="page-header">
        <h1>{{ episode.name }}</h1>
        <a href="{{ path('oktolab_episode_show', {'episode': episode.id}) }}" class="btn btn-default">{{ 'oktolab_media.episode_edit_button'|trans|raw }}</a>
    </div>
    <div class="list-group">
        {% for keychain in keychains %}
            <a href="" class="list-group-item push" data-keychain="{{ keychain.uniqID }}">{{ 'oktolab_media.episode_push'|trans({'%keychain%': keychain.user })}}</a>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">

    </script>
{% endblock %}
