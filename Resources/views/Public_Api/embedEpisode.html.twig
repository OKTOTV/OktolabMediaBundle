<!DOCTYPE html>
<html>
    <head>
        <script src="{{ asset('bundles/bprsstyle/js/jquery2.1.4.js') }}"></script>
        {{ player(episode)|raw }}
        <style type="text/css">
            html, body {
                height: 100%;
                width: 100%;
                padding: 0;
                margin: 0;
            }
            #player {
                height: 100%;
                width: 100%;
                padding: 0;
            }
        </style>
        <title>{{ episode.name|default(name|default(''))}}</title>
    </head>
    <body>
        <figure id="player">
            {% if episode.video is empty %}
                <img src="{{ episode.posterframe|path }}" class="img-responsive" />
            {% endif %}
        </figure>
    </body>
</html>
